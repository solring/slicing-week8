<%
  locations = [
    ['Bangkok', 'Thailand'],
    ['Osaka', 'Japan'],
    ['Roma', 'Italy'],
    ['Paris', 'France'],
    ['Reykjavik', 'Iceland'],
  ];

  numberOptions = [
    'Adult', 'Child', 'Room'
  ];
%>

<div class="bg-info">

<form class="search-bar container" action="search-result.html" method="get">
  <ul class="search-options">
    <!-- Field Destination -->
    <li class="dropdown">
      <button class="btn btn-light btn-block" type="button" data-toggle="dropdown">
        <div class="d-flex align-items-center">
          <div class="material-icons">location_on</div>
          <div class="pl-3 text-left">
            <h5 class="search-title">destination</h5>
            <p class="search-subtitle search-location">Bangkok, Thailand</p>
          </div>
        </div>
      </button>

      <ul class="dropdown-menu list-unstyled">
        <% for (var i=0; i<locations.length; i++) { %>
          <li class="dropdown-item">
            <a href="#" class="d-block">
              <div class="d-flex">
                <div class="material-icons align-middle">grade</div>
                <div>
                  <p><%- locations[i][0] -%></p>
                  <p class="small"><%- locations[i][1] -%></p>
                </div>
              </div>
            </a>
          </li>
        <% } %> 
      </ul>
    </li>
    
    <!-- Field Calendar -->
    <li>
      <button id="searchDatePicker" class="btn btn-light btn-block" type="button" data-toggle="dropdown">
        <div class="d-flex align-items-center">
          <div class="material-icons">date_range</div>
          <div class="pl-3 pr-4 text-left">
            <h5 class="search-title">check-in</h5>
            <p class="search-subtitle search-date-start">17 June</p>
          </div>
          <div class="pl-3 text-left border-left border-info">
            <h5 class="search-title">check-out</h6>
            <p class="search-subtitle search-date-end">18 June</p>
          </div>
        </div> 
      </button>
    </li>
      

    <!-- Field Guests -->
    <li class="dropdown">
      <button class="btn btn-light btn-block" type="button" data-toggle="dropdown">
        <div class="d-flex align-items-center">
          <div class="material-icons">person</div>
          <div class="pl-3 text-left">
            <h5 class="search-title">guests</h5>
            <p class="search-subtitle search-n-guests">2 adultsãƒ»1 room</p>
          </div>
        </div>
      </button>
      <ul class="dropdown-menu list-unstyled">
        <% for (var i=0; i<numberOptions.length; i++) { %>
          <li class="dropdown-item">
              <div class="d-flex justify-content-between">
                <p><%- numberOptions[i] -%></p>
                <div class="numberPicker">0</div>
              </div>
          </li>
        <% } %> 
        </ul>
    </li>
  </ul>

  <button class="btn btn-primary search-btn text-uppercase" type="submit">Search</button>
</form>

</div>
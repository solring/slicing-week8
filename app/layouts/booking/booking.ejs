<div class="container">
<div class="row no-gutters justify-content-center">
  <div class="col-lg-8">

    <form action="./confirmation.html" class="row flex-md-row-reverse" method="get"> <!-- use get to mimic the behavior -->
      <div class="col-md-6">
        <%- include('./booking-detail') -%> 
      </div>
      <div class="col-md-6">
        <h2 class="mb-4 mt-4 mt-md-0">Reservation Details</h2>
        <ul class="list-unstyled text-secondary">
          <li class="form-group">
            <label for="name">Name</label>
            <input id="name" name="name" type="text" class="form-control form-control-lg">
          </li>
          <li class="form-group">
            <label for="email">Email</label>
            <input id="email" email="email" type="text" class="form-control form-control-lg">
          </li>
          <li class="form-group">
            <label for="phone">Phone (optional)</label>
            <input id="phone" phone="phone" type="text" class="form-control form-control-lg">
          </li>
        </ul>
        <button class="btn btn-lg btn-primary btn-block text-uppercase mt-4">reserve</button>
        <p class="text-center text-sub mt-2"><a href="#">Reserve now, pay at stay</a></p>
      </div>
    </form>
  
  </div>
</div>
</div>
<%
  bookings = [
    {
      name: "Rachada Hotel",
      startDate: "17 June 2020",
      endDate: "19 June 2020",
      numOfNights: 2,
      adults: 2,
      price: "4,633",
      img: "Rachada1.jpg",
    },
    {
      name: "WOW Life Hotel",
      startDate: "8 Sep 2020",
      endDate: "15 Sep 2020",
      numOfNights: 7,
      adults: 2,
      price: "13,084",
      img: "Chatuchack1.jpg",
    },
  ];

  tabs = [
    "incoming", "completed"
  ];
%>

<div class="tab-content" id="bookingTabs">
  <% for( let j = 0; j < 2; j++ ) { %>
    <% if (j==0) { %>
      <div class="tab-pane fade show active" id="<%- tabs[j] %>Tab" role="tabpanel">
    <% } else { %>
      <div class="tab-pane fade" id="<%- tabs[j] %>Tab" role="tabpanel">
    <% } %>

    <ul class="list-divider-info">
    <% for (var i = 0; i <bookings.length; i++) { %>
      <% if (i>=j) { %>

      <li class="">
        <div class="card member-card hover-shadow">
          <div class="row no-gutters">

            <div class="col-md-4">
              <img src="./assets/images/<%- bookings[i].img -%>" alt="" class="member-card-img pic-height-sm">
            </div>

            <div class="col-md-8">
              <div class="card-body d-flex flex-column flex-md-row justify-content-between">
                <ul class="mb-4 mb-md-0">
                  <li class="d-flex pb-1">
                    <div class="material-icons mr-3">hotel</div>
                    <div>
                      <h6 class=""><%- bookings[i].name -%></h6>
                      <p class="card-subtitle">Deluxe Suite with Pool</p>
                    </div>
                  </li>
                  <li class="d-flex pb-1">
                    <div class="material-icons mr-3">date_range</div>
                    <div>
                      <h6 class=""><%- bookings[i].startDate -%> - <%- bookings[i].endDate -%></h6>
                      <p class="card-subtitle"><% bookings[i].nights %> nightsãƒ»<% bookings[i].adults %> adults</p>
                    </div>
                  </li>
                  <li class="d-flex">
                    <div class="material-icons mr-3">attach_money</div>
                    <div>
                      <h6 class="">TWD <%- bookings[i].price -%></h6>
                      <p class="card-subtitle">Deluxe Suite with Pool</p>
                    </div>
                  </li>
                </ul>
                <a href="#" class="text-uppercase font-weight-bold">view details</a>
              </div>
            </div>

          </div>
        </div>
      </li>
      <% } %>
    <% } %>
    </ul>

  </div>
  <% } %>
</div>